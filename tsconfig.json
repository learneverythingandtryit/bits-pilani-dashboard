{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* Types */
    "types": ["vite/client"]
  },

  /* âœ… Include only client-side code */
  "include": ["src/**/*.ts", "src/**/*.tsx"],

  /* âœ… Exclude backend + build output */
  "exclude": [
    "node_modules",
    "dist",
    "supabase/**/*",
    "public/**/*",
    "server/**/*",
    "src/server/**/*"   // ðŸ‘ˆ Add this line to ignore your Deno server files
  ]
}
